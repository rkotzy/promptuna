{
  "name": "promptuna",
  "version": "0.1.0",
  "description": "TypeScript SDK for LLM prompt management with config-based approach",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./validate": {
      "import": "./dist/validation/index.js",
      "types": "./dist/validation/index.d.ts"
    }
  },
  "bin": {
    "promptuna-validate": "./dist/validation/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "example": "tsx --env-file=.env example.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --ui --coverage",
    "prepare": "husky"
  },
  "keywords": [
    "llm",
    "prompt",
    "management",
    "typescript",
    "sdk"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "liquidjs": "^10.9.0"
  },
  "optionalDependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  },
  "peerDependencies": {
    "@anthropic-ai/sdk": "^0.56.0",
    "@google/genai": "^1.8.0",
    "openai": "^5.8.2"
  },
  "peerDependenciesMeta": {
    "openai": {
      "optional": true
    },
    "@anthropic-ai/sdk": {
      "optional": true
    },
    "@google/genai": {
      "optional": true
    }
  },
  "files": [
    "dist",
    "schema.json"
  ],
  "lint-staged": {
    "*.{js,ts,tsx,json}": [
      "prettier --write"
    ],
    "*.{yml,yaml}": [
      "prettier --write"
    ]
  }
}
